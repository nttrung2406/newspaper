    <main>
        <div class="container">
            <div class="profile-info">
                <h2>Profile Information</h2>
                <ul>
                    <li><strong>Username:</strong> <%= user.username %></li>
                    <li><strong>Email:</strong> <%= user.email %></li>
                    <li><strong>Role:</strong> <%= user.role %></li>
                    <% if (user.membership) { %>
                        <li><strong>Membership Expiry:</strong> <%= user.membership.expiryDate %></li>
                        <li><strong>Allowed Categories:</strong> 
                            <ul>
                                <% user.membership.categories.forEach(category => { %>
                                    <li><%= category.name %></li>
                                <% }); %>
                            </ul>
                        </li>
                    <% } %>
                </ul>
            </div>

            <!-- Edit Profile Section -->

