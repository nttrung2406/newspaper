<!DOCTYPE html>
<html lang="vi">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona editor</title>
     <!-- plugins:css -->
     <link rel="stylesheet" href="/editor/vendors/css/vendor.bundle.base.css">
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
     
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@mdi/font@7.4.47/css/materialdesignicons.min.css">
     <!-- endinject -->
     <!-- Plugin css for this page -->
     <link rel="stylesheet" href="/editor/vendors/jvectormap/jquery-jvectormap.css">
     <link rel="stylesheet" href="/editor/vendors/flag-icon-css/css/flag-icon.min.css">
     <link rel="stylesheet" href="/editor/vendors/owl-carousel-2/owl.carousel.min.css">
     <link rel="stylesheet" href="/editor/vendors/owl-carousel-2/owl.theme.default.min.css">
     <!-- End plugin css for this page -->
     <!-- Layout styles -->
     <link rel="stylesheet" href="/editor/css/style.css">
     <!-- End layout styles -->
     <link rel="shortcut icon" href="/editor/images/favicon.png" />
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('../partials/_sidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
        <%- include('../partials/_navbar') %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

            <!--Page Title-->
            <div class="page-header">
              <h3 class="page-title">Quản lý chuyên mục</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/editor">Trang chủ</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">Quản lý chuyên mục</li>
                </ol>
              </nav>
            </div>
            
            <div class="row">
              <div class="col-12 grid-margin stretch-card">
                <div class="card text-left">
                  <div class="card-body">
                    <!-- Search Bar -->

                    <div class="form-group">
                      <form method="GET" action="/editor/categories">
                        <div class="input-group col-12" style="padding-left: 0; padding-right: 0;">
                          <input 
                            type="text" 
                            name="search" 
                            placeholder="Nhập tên chuyên mục" 
                            class="form-control"
                            value="<%= search || '' %>"
                          />
                          <div class="input-group-append">
                            <button type="submit" class="btn btn-primary btn-icon-text">
                              <i class="mdi mdi-magnify"></i> Tìm kiếm
                            </button>
                          </div>
                        </div>
                      </form>
                    </div>

                    <!-- Create category button-->
                    <a href="category/create" class="btn btn-success mb-3"><i class="mdi mdi-plus btn-icon-prepend"></i>Tạo chuyên mục</a>

                    <!-- Alert -->
                    <% if (message && message.length > 0) { %>
                      <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                          <span class="sr-only">Close</span>
                        </button>
                        <%= message %>
                      </div>
                    <% } %>
                    <!-- Table to Display Categories -->
                    <div class="table-responsive">
                      <table class="table table-dark">
                        <thead>
                          <tr>
                            <th>Tên Chuyên Mục</th>
                            <th>Chuyên mục cha</th>
                            <th>Ngày tạo</th>
                            <th>Ngày cập nhật</th>
                            <th>Chức năng</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if (categories && categories.length > 0) { %>
                            <% categories.forEach((category, index) => { %>
                              <tr>
                                <td><%= category.categoryName %></td>
                                <td><%= category.parentID ? category.parentID.categoryName : 'Không có' %></td>
                                <td><%= category.createdAt ? new Date(category.createdAt).toLocaleDateString() : 'N/A' %></td>
                                <td><%= category.updatedAt ? new Date(category.updatedAt).toLocaleDateString() : 'N/A' %></td>
                                <td>
                                  <div class="btn-group">
                                    <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown">Actions</button>
                                    <div class="dropdown-menu">
                                      <a href="category/info/<%= category._id %>" class="btn btn-info btn-icon-text d-block"><i class="mdi mdi-information-outline btn-icon-prepend"></i></span>Info</a>
                                      <a href="category/update/<%= category._id %>" class="btn btn-primary btn-icon-text d-block"><i class="mdi mdi-update btn-icon-prepend"></i>Update</a>
                                      <a href="category/delete/<%= category._id %>" class="btn btn-danger btn-icon-text d-block"><i class="mdi mdi-delete btn-icon-prepend"></i>Delete</a>
                                    </div>
                                  </div>
                                </td>
                              </tr>
                            <% }); %>
                          <% } else { %>
                            <tr>
                              <td colspan="5" class="text-center">Không có chuyên mục nào.</td>
                            </tr>
                          <% } %>
                          
                        </tbody>
                      </table>
                    </div>
            
                    <!-- Pagination -->
                    <nav aria-label="Pagination">
                      <ul class="pagination justify-content-center">
                        <% for (let i = 1; i <= totalPages; i++) { %>
                          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a 
                              class="page-link" 
                              href="/editor/categories?page=<%= i %>&search=<%= search || '' %>"
                            >
                              <%= i %>
                            </a>
                          </li>
                        <% } %>
                      </ul>
                    </nav>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <%- include('../partials/_footer') %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <script src="/editor/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/editor/vendors/chart.js/Chart.min.js"></script>
    <script src="/editor/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="/editor/vendors/jvectormap/jquery-jvectormap.min.js"></script>
    <script src="/editor/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="/editor/vendors/owl-carousel-2/owl.carousel.min.js"></script>
    <script src="/editor/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/editor/js/off-canvas.js"></script>
    <script src="/editor/js/hoverable-collapse.js"></script>
    <script src="/editor/js/misc.js"></script>
    <script src="/editor/js/settings.js"></script>
    <script src="/editor/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/editor/js/dashboard.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>