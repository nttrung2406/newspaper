    <script>
      document
        .getElementById("submit-button")
        .addEventListener("click", function (event) {
          if ($("#summernote").summernote("isEmpty")) {
            event.preventDefault();
            $("#summernote").summernote("focus");
          }
        });
    </script>    
    
