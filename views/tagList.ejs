<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tags List</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      .tag-link {
        font-size: 1.1rem;
        color: #007bff;
        text-decoration: none;
      }
      .tag-link:hover {
        text-decoration: underline;
      }
      .pagination .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
      }
      .pagination .page-link {
        color: #007bff;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <main>
        <div class="container mt-4">
          <h2 class="text-center my-4">All Tags</h2>
      
          <!-- Search Form -->
          <form method="get" action="/tags" class="mb-4">
            <div class="input-group">
              <input
                type="text"
                name="search"
                class="form-control"
                placeholder="Search tags..."
                value="<%- search %>"
              />
              <button class="btn btn-primary" type="submit">Search</button>
            </div>
          </form>
      
          <div class="row">
            <div class="col-12">
              <% if (tags.length > 0) { %>
                <ul class="list-group">
                  <% tags.forEach(tag => { %>
                    <li class="list-group-item">
                      <a href="/tags/<%- tag._id %>" class="tag-link"><%- tag.tagName %></a>
                    </li>
                  <% }); %>
                </ul>
              <% } else { %>
                <p class="text-center text-muted">No tags found</p>
              <% } %>
            </div>
          </div>
      
          <!-- Pagination -->
          <% if (totalPages > 1) { %>
            <div class="col-12 my-4 d-flex justify-content-center">
              <nav>
                <ul class="pagination">
                  <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                      <a
                        class="page-link"
                        href="?search=<%- search %>&page=<%- i %>"
                      ><%- i %></a>
                    </li>
                  <% } %>
                </ul>
              </nav>
            </div>
          <% } %>
        </div>
      </main>
    <%- include('./partials/footer.ejs') %>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
