<header>
  <!-- Header Start -->
  <div class="header-area">
    <div class="main-header">
      <div class="header-top black-bg d-none d-md-block">
        <div class="container">
          <div class="col-xl-12">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="header-info-left">
                <ul>
                  <li id="temperature">
                    <img src="/img/icon/header_icon1.png" alt="" />Loading temperature...
                  </li>
                  <li id="datetime">
                    <img src="/img/icon/header_icon1.png" alt="" />Loading date and time...
                  </li>
                </ul>
              </div>
              <div class="header-info-right">
                <ul class="header-social">
                  <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                  <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                  <li><a href="#"><i class="fab fa-pinterest-p"></i></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="header-mid d-none d-md-block">
        <div class="container">
          <div class="row d-flex align-items-center">
            <!-- Logo -->
            <div class="col-xl-3 col-lg-3 col-md-3">
              <div class="logo">
                <a href="/index"><img src="/img/logo/logo.png" alt="" /></a>
              </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-9">
              <div class="header-banner f-right">
                <img src="/img/hero/.jpg" alt="" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="header-bottom header-sticky">
        <div class="container">


          <div class="row align-content-center">
            <div class="col col-12">
              <div class="sticky-logo">
                <a href="/index"><img src="/img/logo/logo.png" alt="" /></a>
              </div>
            </div>

            <div class="col col-6">
              <div class="main-menu d-none d-md-flex">
                <nav>
                  <ul id="navigation">
                    <li><a href="/index">Home</a></li>
                    <li><a href="/categori">Category</a></li>
                    <li><a href="/about">About</a></li>
                    <!-- <li><a href="/latest_news">Latest News</a></li> -->
                    <li><a href="/contact">Contact</a></li>
                    <% if (role && role==='writer' ) { %>
                      <li><a href="/writer">Compose</a></li>
                      <% } %>
                  </ul>
                </nav>
              </div>
            </div>

            <div class="col col-6 d-none d-lg-flex"
              style="display: flex; justify-content: flex-end; align-items: center;">
              <form id="searchForm" action="/posts/search" method="GET" style="width: 100%; max-width: 400px;">
                <div class="input-group">
                  <input type="text" id="searchInput" name="query" placeholder="Search" class="form-control" aria-label="Text input with dropdown button"/>
                  
                  <div class="input-group-append">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="searchByDropdown"
                      data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                      style="color: white; border: 1px solid #6c757d; border-radius: 0 4px 4px 0; padding: 0.5rem 1rem;">
                      Search By
                    </button>

                    <div class="dropdown-menu" aria-labelledby="searchByDropdown"
                      style="position: absolute; top: 100%; left: 0; width: 100%; background-color: white; border: 1px solid #ccc; border-radius: 4px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
                      <label class="dropdown-item d-flex align-items-center"
                        style="display: flex; align-items: center; padding: 0.5rem;">
                        <input type="checkbox" name="searchBy" value="title" style="margin-right: 8px;" />
                        <span style="font-size: 14px;">Title</span>
                      </label>
                      <label class="dropdown-item d-flex align-items-center"
                        style="display: flex; align-items: center; padding: 0.5rem;">
                        <input type="checkbox" name="searchBy" value="abstract" style="margin-right: 8px;" />
                        <span style="font-size: 14px;">Abstract</span>
                      </label>
                      <label class="dropdown-item d-flex align-items-center"
                        style="display: flex; align-items: center; padding: 0.5rem;">
                        <input type="checkbox" name="searchBy" value="content" style="margin-right: 8px;" />
                        <span style="font-size: 14px;">Content</span>
                      </label>
                    </div>
                    
                  </div>
                </div>
                
              </form>

              <% if (isAuthenticated) { %>
                <a href="/auth/profile" class="person-icon" title="Profile"
                  style="margin-left: 1rem; text-decoration: none; color: #333;">
                  <i class="fas fa-user" style="font-size: 1.2rem;"></i>
                  <span style="margin-left: 0.5rem;">
                    <%= isAuthenticated ? 'Profile' : '' %>
                  </span>
                </a>
                <% } else { %>
                  <a href="/auth" class="person-icon" title="Sign Up / Login"
                    style="margin-left: 1rem; text-decoration: none; color: #333;">
                    <i class="fas fa-user" style="font-size: 1.2rem;"></i>
                  </a>
                  <% } %>
            </div>

            
              

          </div>

        </div>
      </div>
    </div>
  </div>

