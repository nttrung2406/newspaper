<header>
  <!-- Header Start -->
  <div class="header-area">
    <div class="main-header">
      <div class="header-top black-bg d-none d-md-block">
        <div class="container">
          <div class="col-xl-12">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="header-info-left">
                <ul>
                  <li>
                    <img src="/img/icon/header_icon1.png" alt="" />34Âºc, Sunny
                  </li>
                  <li>
                    <img src="/img/icon/header_icon1.png" alt="" />Wednesday,
                    20th November, 2024
                  </li>
                </ul>
              </div>
              <div class="header-info-right">
                <ul class="header-social">
                  <li>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                  </li>
                  <li>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                  </li>
                  <li>
                    <a href="#"><i class="fab fa-pinterest-p"></i></a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="header-mid d-none d-md-block">
        <div class="container">
          <div class="row d-flex align-items-center">
            <!-- Logo -->
            <div class="col-xl-3 col-lg-3 col-md-3">
              <div class="logo">
                <a href="/index"><img src="/img/logo/logo.png" alt="" /></a>
              </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-9">
              <div class="header-banner f-right">
                <img src="/img/hero/.jpg" alt="" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="header-bottom header-sticky">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-xl-10 col-lg-10 col-md-12 header-flex">
              <!-- sticky -->
              <div class="sticky-logo">
                <a href="/index"><img src="/img/logo/logo.png" alt="" /></a>
              </div>
              <!-- Main-menu -->
              <div class="main-menu d-none d-md-block">
                <nav>
                  <ul id="navigation">
                    <li><a href="/index">Home</a></li>
                    <li><a href="/categori">Category</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/latest_news">Latest News</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <li>
                      <a href="#">Pages</a>
                      <ul class="submenu">
                        <li><a href="/blog">Blog</a></li>
                        <li><a href="/single-blog">Blog Details</a></li>
                        <li><a href="/details">Category Details</a></li>
                      </ul>
                    </li>
                    <% if (role && role === 'writer') { %>
                    <li><a href="/writer">Compose</a></li>
                    <% } %>
                  </ul>
                </nav>
              </div>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-4">
              <div class="header-right-btn f-right d-none d-lg-block">
                <i class="fas fa-search special-tag"></i>
                <div class="search-box">
                  <form id="searchForm" action="/posts/search" method="GET">
                    <input
                      type="text"
                      id="searchInput"
                      name="query"
                      placeholder="Search"
                    />
                  </form>
                </div>
                <% if (isAuthenticated) { %>
                <!-- If user is logged in, show Profile link -->
                <a href="/auth/profile" class="person-icon" title="Profile">
                  <i class="fas fa-user"></i>
                  <span><%= isAuthenticated ? 'Profile' : '' %></span>
                </a>
                <% } else { %>
                <!-- If user is not logged in, show Sign Up/Login button -->
                <a href="/auth" class="person-icon" title="Sign Up / Login">
                  <i class="fas fa-user"></i>
                </a>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Header End -->
</header>
