<header>
  <!-- Header Start -->
  <div class="header-area">
    <div class="main-header">
      <div class="header-top black-bg d-none d-md-block">
        <div class="container">
          <div class="col-xl-12">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="header-info-left">
                <ul>
                  <li id="temperature">
                    <img src="/img/icon/header_icon1.png" alt="" />Loading temperature...
                  </li>
                  <li id="datetime">
                    <img src="/img/icon/header_icon1.png" alt="" />Loading date and time...
                  </li>
                </ul>
              </div>
              <div class="header-info-right">
                <ul class="header-social">
                  <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                  <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                  <li><a href="#"><i class="fab fa-pinterest-p"></i></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="header-mid d-none d-md-block">
        <div class="container">
          <div class="row d-flex align-items-center">
            <!-- Logo -->
            <div class="col-xl-3 col-lg-3 col-md-3">
              <div class="logo">
                <a href="/index"><img src="/img/logo/logo.png" alt="" /></a>
              </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-9">
              <div class="header-banner f-right">
                <img src="/img/hero/.jpg" alt="" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="header-bottom header-sticky">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-xl-10 col-lg-10 col-md-12 header-flex">
              <div class="sticky-logo">
                <a href="/index"><img src="/img/logo/logo.png" alt="" /></a>
              </div>
              <!-- Main-menu -->
              <div class="main-menu d-none d-md-block">
                <nav>
                  <ul id="navigation">
                    <li><a href="/index">Home</a></li>
                    <li><a href="/categori">Category</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/latest_news">Latest News</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <% if (role && role === 'writer') { %>
                    <li><a href="/writer">Compose</a></li>
                    <% } %>
                  </ul>
                </nav>
              </div>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-4">
              <div class="header-right-btn f-right d-none d-lg-block">
                <i class="fas fa-search special-tag"></i>
                <div class="search-box">
                  <form id="searchForm" action="/posts/search" method="GET">
                    <input type="text" id="searchInput" name="query" placeholder="Search" />
                    
                    <!-- Dropdown for search fields -->
                    <div class="dropdown">
                      <button class="btn btn-secondary dropdown-toggle w-100" type="button" id="searchByDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Search By
                      </button>
                      <div class="dropdown-menu w-100" aria-labelledby="searchByDropdown">
                        <label class="dropdown-item d-flex align-items-center">
                          <input type="checkbox" name="searchBy" value="title" class="me-2 checkbox-adjusted" />
                          <span>Title</span>
                        </label>
                        <label class="dropdown-item d-flex align-items-center">
                          <input type="checkbox" name="searchBy" value="abstract" class="me-2 checkbox-adjusted" />
                          <span>Abstract</span>
                        </label>
                        <label class="dropdown-item d-flex align-items-center">
                          <input type="checkbox" name="searchBy" value="content" class="me-2 checkbox-adjusted" />
                          <span>Content</span>
                        </label>
                      </div>
                    </div>
                  </form>
                </div>
                <% if (isAuthenticated) { %>
                <a href="/auth/profile" class="person-icon" title="Profile">
                  <i class="fas fa-user"></i>
                  <span><%= isAuthenticated ? 'Profile' : '' %></span>
                </a>
                <% } else { %>
                <a href="/auth" class="person-icon" title="Sign Up / Login">
                  <i class="fas fa-user"></i>
                </a>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* Custom styles for search dropdown */
    .dropdown-item {
      padding: 0.5rem 1rem;
      cursor: pointer;
    }
    
    .dropdown-item input[type="checkbox"] {
      margin-right: 8px;
      vertical-align: middle;
    }
    
    .dropdown-item span {
      vertical-align: middle;
    }
    
    .dropdown-item:hover {
      background-color: #f8f9fa;
    }
    
    .search-box .dropdown {
      width: 100%;
      margin-top: 10px;
    }
    
    .d-flex.align-items-center {
      gap: 8px;
    }

    /* Adjusted checkbox position */
    .checkbox-adjusted {
      position: relative;
      top: 100px;
    }
    
    .dropdown-item.d-flex.align-items-center {
      align-items: start !important;
      padding-top: 30px;
      padding-bottom: 30px;
    }
  </style>
</header>