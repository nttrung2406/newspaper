<!DOCTYPE html>
<html class="no-js" lang="zxx">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Search Results</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico" />

    <!-- CSS here -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      .tag-badge {
        background-color: #007bff;
        color: white;
      }
      .pagination .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
      }
      .pagination .page-link {
        color: #007bff;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <div class="container mt-4">
        <h1 class="text-center mb-4">Search Results for "<%- query %>"</h1>
        <div class="row">
          <% if (results.length > 0) { %>
            <% results.forEach(post => { %>
              <div class="col-12 d-flex my-3">
                <div class="card w-100 shadow-sm rounded">
                  <div class="row g-0">
                    <!-- Post Image -->
                    <div class="col-md-3">
                      <img src="<%- post.firstImage || '/img/default-image.jpg' %>" 
                           class="img-fluid rounded-start" 
                           alt="<%- post.title %>" 
                           style="height: 200px; object-fit: cover;">
                    </div>
                    <!-- Post Details -->
                    <div class="col-md-9">
                      <div class="card-body">
                        <!-- Post Title -->
                        <h5 class="card-title">
                          <a href="/posts/<%- post._id %>" class="text-decoration-none text-primary">
                            <%- post.title %>
                          </a>
                        </h5>
                        <!-- Category -->
                        <p class="card-text text-muted">
                          <strong>Category:</strong> <%- post.categoryName || 'Uncategorized' %>
                        </p>
                        <!-- Tags -->
                        <p class="card-text">
                          <strong>Tags:</strong>
                          <% if (post.tags && post.tags.length > 0) { %>
                            <% post.tags.forEach(tag => { %>
                              <a href="/tags/<%- tag._id %>" class="badge tag-badge text-decoration-none">
                                <%- tag.tagName %>
                              </a>
                            <% }); %>
                          <% } else { %>
                            <span class="text-muted">No tags</span>
                          <% } %>
                        </p>
                        <!-- Publish Date -->
                        <p class="card-text text-muted">
                          <strong>Published:</strong> <%- new Date(post.createdAt).toLocaleDateString() %>
                        </p>
                        <!-- Abstract -->
                        <p class="card-text">
                          <strong>Abstract:</strong> 
                          <%- post.abstract.length > 10 ? post.abstract.split(' ').slice(0, 10).join(' ') + '...' : post.abstract %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>

            <!-- Pagination -->
            <div class="col-12 mt-4 d-flex justify-content-center">
              <nav>
                <ul class="pagination">
                  <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                      <a class="page-link" href="?query=<%- query %>&page=<%- i %>"><%- i %></a>
                    </li>
                  <% } %>
                </ul>
              </nav>
            </div>

          <% } else { %>
            <div class="col-12">
              <div class="card text-center shadow-sm rounded">
                <div class="card-body">
                  <p class="card-text mb-0 text-muted">No results found.</p>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </main>
    <%- include('./partials/footer.ejs') %>

    <!-- JS here -->
    <script src="/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
