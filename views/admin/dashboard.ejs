<body>
  <div class="container-scroller">
    <!-- partial:partials/_sidebar.html -->
    <%- include('partials/_sidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
        <%- include('partials/_navbar') %>
          <!-- partial -->
          <div class="main-panel">
            <div class="content-wrapper">

              <div class="row">
                <div class="col col-12 col-md-6 grid-margin stretch-card">
                  <div class="card shadow-sm border-0">
                    <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                      <h5 class="mb-0">Quản lý chuyên mục</h5>
                      <a href="/admin/categories" class="btn btn-light btn-sm">Đi tới</a>
                    </div>
                    <div class="card-body">
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Thêm chuyên mục
                          <span class="badge bg-primary rounded-pill">New</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Chỉnh sửa chuyên mục
                          <span class="badge bg-warning rounded-pill">Edit</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Xem chi tiết chuyên mục
                          <span class="badge bg-info rounded-pill">View</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Xóa chuyên mục
                          <span class="badge bg-danger rounded-pill">Delete</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>



                <div class="col col-12 col-md-6 grid-margin stretch-card">
                  <div class="card shadow-sm border-0">
                    <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                      <h5 class="mb-0">Quản lý nhãn</h5>
                      <a href="/admin/tags" class="btn btn-light btn-sm">Đi tới</a>
                    </div>
                    <div class="card-body">
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Thêm nhãn
                          <span class="badge bg-primary rounded-pill">New</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Xóa nhãn
                          <span class="badge bg-danger rounded-pill">Delete</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Chỉnh sửa nhãn
                          <span class="badge bg-warning rounded-pill">Edit</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                
                <div class="col col-12 col-md-6 grid-margin stretch-card">
                  <div class="card shadow-sm border-0">
                    <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                      <h5 class="mb-0">Quản lý người dùng</h5>
                      <a href="/admin/users" class="btn btn-light btn-sm">Đi tới</a>
                    </div>
                    <div class="card-body">
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Thêm người dùng
                          <span class="badge bg-primary rounded-pill">New</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Chỉnh sửa thông tin người dùng
                          <span class="badge bg-warning rounded-pill">Edit</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Xem thông tin người dùng
                          <span class="badge bg-info rounded-pill">View</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Gia hạn premium cho writer
                          <span class="badge bg-success rounded-pill">Premium</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Phân công chuyên mục cho editor
                          <span class="badge bg-secondary rounded-pill">Assign</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Xác thực đăng ký membership
                          <span class="badge bg-info rounded-pill">Verify</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                
                
                <div class="col col-12 col-md-6 grid-margin stretch-card">
                  <div class="card shadow-sm border-0">
                    <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                      <h5 class="mb-0">Quản lý bài viết</h5>
                      <a href="/admin/posts" class="btn btn-light btn-sm">Đi tới</a>
                    </div>
                    <div class="card-body">
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Tìm bài viết theo (title, category, status)
                          <span class="badge bg-info rounded-pill">Search</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Xuất bản bài báo
                          <span class="badge bg-success rounded-pill">Publish</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Xem nội dung bài viết
                          <span class="badge bg-primary rounded-pill">View</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center custom-li">
                          Gán premium cho bài viết
                          <span class="badge bg-secondary rounded-pill">Premium</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                
              </div>

              <style>
                .custom-li {
                  border: 1px solid #dee2e620 !important;
                  background-color: #212529 !important;
                  color: white !important;
                }
              </style>

            </div>
            <!-- content-wrapper ends -->
            <!-- partial:partials/_footer.html -->
            <%- include('partials/_footer') %>
              <!-- partial -->
          </div>
          <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
  </div>
