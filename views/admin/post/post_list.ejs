<!DOCTYPE html>
<html lang="vi">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dashboard</title>
     <!-- plugins:css -->
     <link rel="stylesheet" href="/admin/vendors/css/vendor.bundle.base.css">
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
     
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@mdi/font@7.4.47/css/materialdesignicons.min.css">
     <!-- endinject -->
     <!-- Plugin css for this page -->
     <link rel="stylesheet" href="/admin/vendors/jvectormap/jquery-jvectormap.css">
     <link rel="stylesheet" href="/admin/vendors/flag-icon-css/css/flag-icon.min.css">
     <link rel="stylesheet" href="/admin/vendors/owl-carousel-2/owl.carousel.min.css">
     <link rel="stylesheet" href="/admin/vendors/owl-carousel-2/owl.theme.default.min.css">
     <!-- End plugin css for this page -->
     <!-- Layout styles -->
     <link rel="stylesheet" href="/admin/css/style.css">
     <!-- End layout styles -->
     <link rel="shortcut icon" href="/admin/images/favicon.png" />
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('../partials/_sidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
        <%- include('../partials/_navbar') %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

            <!--Page Title-->
            <div class="page-header">
              <h3 class="page-title">Quản lý nhãn</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/admin">Trang chủ</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">Quản lý nhãn</li>
                </ol>
              </nav>
            </div>
            
            <div class="row">
              <div class="col-12 grid-margin stretch-card">
                <div class="card text-left">
                  <div class="card-body">
                    <!-- Search Bar -->

                    <div class="row align-items-center">
                      <div class="col-8">
                        <div class="form-group mb-0">
                          <form method="GET" action="/admin/tags" class="input-group">
                            <input 
                              type="text" 
                              name="search" 
                              placeholder="Nhập tên nhãn" 
                              class="form-control"
                              value=""
                            />
                            <div class="input-group-append">
                              <button type="submit" class="btn btn-primary">
                                <i class="mdi mdi-magnify"></i>
                                Search
                              </button>
                            </div>
                          </form>
                        </div>
                      </div>

                    </div>

                    <!-- Alert -->
                    
                    <!-- Table to Display Categories -->
                    <div class="table-responsive mt-4">
                      <table class="table table-dark table-hover custom-table">
                        <thead class="thead-dark">
                          <tr>
                            <th>Tựa bài báo</th>
                            <th>Tác giả</th>
                            <th>Chuyên mục</th>
                            <th>Trạng thái</th>
                            <th style="width: 6%;">Premium</th>
                            <th style="width: 10%;">Chức năng</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% postList.forEach(element => { %>
                            <tr>
                              <td><%= element.title %></td>
                              <td><%= element.penName %></td>
                              <td> <%= element.category.parentID ? element.category.parentID.categoryName + " / " : "" %><%= element.category.categoryName %></td>
                              <td>
                                <% if (element.status) { %>
                                  <% 
                                  let badgeClass = '';
                                  let badgeText = element.status;
                              
                                  // Assign appropriate classes based on the status
                                  switch (element.status) {
                                      case 'Draft':
                                          badgeClass = 'badge-outline-secondary'; // Light grey outline for Draft
                                          break;
                                      case 'Submitted':
                                          badgeClass = 'badge-outline-info'; // Blue outline for Submitted
                                          break;
                                      case 'Approved':
                                          badgeClass = 'badge-outline-success'; // Green outline for Approved
                                          break;
                                      case 'Rejected':
                                          badgeClass = 'badge-outline-danger'; // Red outline for Rejected
                                          break;
                                      case 'Published':
                                          badgeClass = 'badge-outline-primary'; // Blue outline for Published
                                          break;
                                      default:
                                          badgeClass = 'badge-outline-dark'; // Default outline for unknown status
                                  }
                                  %>
                                  <span class="badge <%= badgeClass %>"><%= badgeText %></span>
                              <% } else { %>
                                  <span class="badge badge-danger">No Status</span> 
                              <% } %>
                              
                              </td>
                              <td>
                                <td>
                                  <% if (element.premium) { %>
                                    <i class="mdi mdi-check" style="color: green;"></i>
                                  <% } else { %>
                                    <i class="mdi mdi-close" style="color: red;"></i>
                                  <% } %>
                                </td>                                
                              </td>
                              <td>
                                <a href="/admin/posts/edit/<%= element.id %>" class="btn btn-primary btn-sm">
                                  <i class="mdi mdi-table-edit"></i>
                                </a>
                                <a href="/admin/posts/delete/<%= element.id %>" class="btn btn-danger btn-sm">
                                  <i class="mdi mdi-delete"></i>
                                </a>
                              </td>
                            </tr>
                          <%}); %>
                        </tbody>
                      </table>



                      <style>
                            .custom-table {
                            border-collapse: collapse;
                            width: 100%;
                          }
                        
                          .custom-table th, .custom-table td {
                            border: 1px solid #dee2e620;
                            padding: 8px;
                          }
                        
                          .custom-table th {
                            background-color: #343a40;
                            color: white;
                          }
                        
                          .custom-table tr:nth-child(even) {
                            background-color: #f2f2f2;
                          }
                        
                          .custom-table tr:hover {
                            background-color: #f1f1f1;
                          }
                        
                          .custom-table th, .custom-table td {
                            text-align: center;
                        }

                      </style>
                    </div>
            
                    <!-- Pagination -->
                    <% if (totalPages > 1) {%>
                      <div class="row mt-3">
                        <nav aria-label="Pagination">
                          <ul class="pagination justify-content-center">
                            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                              <a href="?page=<%= currentPage -1 %>&search=<%= search %>" class="page-link">&laquo;</a>
                            </li>
                            
  
                            <li class="page-item active">
                              <a href="#" class="page-link"><%= currentPage %></a>
                            </li>
  
                            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                              <a href="?page=<%= currentPage + 1 %>&search=<%= search %>" class="page-link">&raquo;</a>
                            </li>
                          </ul>
                        </nav>
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <%- include('../partials/_footer') %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <script src="/admin/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/admin/vendors/chart.js/Chart.min.js"></script>
    <script src="/admin/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="/admin/vendors/jvectormap/jquery-jvectormap.min.js"></script>
    <script src="/admin/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="/admin/vendors/owl-carousel-2/owl.carousel.min.js"></script>
    <script src="/admin/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/admin/js/off-canvas.js"></script>
    <script src="/admin/js/hoverable-collapse.js"></script>
    <script src="/admin/js/misc.js"></script>
    <script src="/admin/js/settings.js"></script>
    <script src="/admin/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/admin/js/dashboard.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>